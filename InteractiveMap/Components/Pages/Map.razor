@page "/"

<PageTitle>Map</PageTitle>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>University Interactive Map</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            text-align: center;
            background: radial-gradient(circle, #d3f2a3, #074050);
            //ffcdd2 backgroud color: white;
        }
        header {
            background: conic-gradient(circle, #387478, #f6f4f0);
            color: white;
            padding: 1rem;
        }
        .map-container {
            width: 80%;
            margin: 2rem auto;
            padding: 2rem;
            background: radial-gradient(circle, #1f7d53, #18230f);
            border: 1px solid #cccccc;
            border-radius: 8px;
        }
        .map-placeholder {
            height: 400px;
            border: 2px dashed #888888;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #808080;
            font-size: 1.2rem;
        }
    </style>
</head>
<body>
    <header>
        <h1>Welcome to the University Interactive Map</h1>
        <p>Your virtual guide to exploring the campus</p>
    </header>
    <div class="map-container">
        <div class="map-placeholder">
            Interactive Map Placeholder
        </div>
        <p>This is where our interactive map feature will go!</p>
    </div>
</body>
</html>
